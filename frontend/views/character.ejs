        <p>Your superfood is <%= character.superfood %></p>
      </div>
    </div>
  </div>

  <!-- Grid column 2 - Recipe link section  -->
  <div class="recipe-content">
    <div class="recipe-item">
      <p><%= character.superfood %> Recipes</p>
      <a href="/recipes/<%= character.superfoodId %>"
        ><img src="../public/img/this-way-right.png" alt="Recipe Arrow"
      /></a>
    </div>
  </div>
</div>
