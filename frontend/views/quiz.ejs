<%- include('components/header', { header: true }) %> <%-
include('components/loading') %>
<div class="page-content" id="quiz-page">
  <!-- Questions and answers  -->
  <div class="overlay">
    <div class="popup">
      <h2>Welcome Amazing guest!</h2>
      <p>
        Take our quiz to discover which circus character you most resemble, and
        uncover the secret to their superpowers - their favorite superfood!
      </p>
      <div class="primary-btn btn">
        Start the Quiz!
        <div class="arrow-box"><span class="arrow">👉🏼</span></div>
      </div>
    </div>
  </div>
  <div class="question-wrapper">
    <div id="questions-grid">
      <div
        class="answer1 arrow-btn"
        onclick="loadQuestions(), addAnswerToList('answer-left'), calculateQuizScore()"
      >
        <p id="answer-left"></p>
        <img
          src="../public/img/this-way-left.png"
          alt="arrow pointing to the left"
        />
      </div>
      <h1 id="question"></h1>
      <div class="question">
        <img
          id="question-img"
          src="../public/img/unknown-character.png"
          alt=""
        />
      </div>
      <div
        class="answer2 arrow-btn"
        onclick="loadQuestions(), addAnswerToList('answer-right'), calculateQuizScore()"
      >
        <p id="answer-right"></p>
        <img
          src="../public/img/this-way-right.png"
          alt="arrow pointing to the left"
        />
      </div>
    </div>

    <!-- Restart button -->
    <div class="restart-quiz">
      <a href="/quiz">restart quiz</a>
    </div>
  </div>
</div>

<%- include('components/footer') %>
