  <div class="character-content">
    <!-- Title  -->
    <div class="title">
      <!-- Name and description elements -->
      <h1>Your superpower is ....</h1>
    </div>


    <!--  Character image -->
    <div class="character-img">
      <img src="<%= character.image %>" alt="Character Image" />
